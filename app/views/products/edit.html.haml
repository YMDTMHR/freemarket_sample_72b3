      .items__product
        .product__name 商品名
        .product__required 必須
        = f.text_field :name, placeholder: "40文字まで", class: "product__goods"
        %br/
        %br/
        .product__name 商品の説明
        .product__required 必須
        = f.text_area :description, placeholder: "商品の説明(必須1000文字以内)", class: "product__description"
        %br/
        %br/
        .product__name カテゴリー
        .product__required 必須
        .listing-form-box
          .listing-product-detail__category
            .listing-select-wrapper
              .listing-select-wrapper__box
                -# = @parent_category
                -# = @child_category.name
                -# = @grandchild_category.name
                //親カテゴリーのセレクトボックスの生成
                = f.select :category_id, options_for_select(@category_parent_array.map{|category|[category.name, category.id]}), {selected: @product.category_id}, {class: 'listing-select-wrapper__box--select', id: 'parent_category'}
                = f.select :category_id, options_for_select(@category_children_array.map{|category|[category.name, category.id]}), {selected: @product.category_id}, {class: 'listing-select-wrapper__box--select', id: 'parent_category'}
                = f.select :category_id, options_for_select(@category_grandchildren_array.map{|category|[category.name, category.id]}), {selected: @product.category_id}, {class: 'listing-select-wrapper__box--select', id: 'parent_category'}
                -# = f.select :category, @category_children_array, {}, {class: 'listing-select-wrapper__box--select', id: 'parent_category'}
                %i.fas.fa-chevron-down.listing-select-wrapper__box--arrow-down
                -# = f.collection_select :category_id, Category.all, :id, :name

        %br/
        %br/

        .product__name 商品の状態
        .product__required 必須
        = f.select :status, [['新品、未使用'], ['未使用に近い'], ["目立った傷や汚れなし"], ["やや傷や汚れあり"], ["傷や汚れあり"], ["全体的に状態が悪い"]], {}, {class: "product__status"}
        

      .items__delivery
        .delivery__name 配送料の負担
        .delivery__required 必須
        = f.select :shipping_cost, [['送料込み(出品者負担)'], ['着払い(購入者負担)']], {}, {class: "delivery__cost"}
        %br/
        %br/
        .delivery__name 発送元の地域
        .delivery__required 必須
        = f.collection_select :prefecture_id, Prefecture.all, :id, :name
        %br/
        %br/
        .delivery__name 発送までの日数
        .delivery__required 必須
        = f.select :shipping_days, [['1~2日で発送'], ['2~3日で発送'], ["4~7日で発送"]], {}, {class: "delivery__days"}

      .items__value
        .value__name 販売価格
        .value__required 必須
        = f.text_field :price, placeholder: "入力してください", class: "value__prize"
        .value__commission 販売手数料（10%）
        .value__profit 販売利益
        = f.submit root_path, value:"編集する",  class: "value__judgment"
      
