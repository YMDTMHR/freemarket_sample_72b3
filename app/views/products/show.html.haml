.wraper
  .main
    .topContent
      .itemBox
        %h2 
          = @product.name
        .itemBox__body
          %ul
            %li<
              = image_tag @product.images[0].image.url
              %ul
                - @product.images.each do |image|
                  %li<
                    = image_tag image.image.url,size: "75x75"

        .itemBox__price
          %span 
            ¥
            = @product.price
          .itemBox__price--detail
            (税込) 送料込み
        .itemDetail
          = @product.description
        .table
          %table
            %tbody
              %tr
                %th 出品者
                %td 
                  = @product.user.nickname
              %tr
                %th カテゴリー
                %td 
                  = link_to "#" do
                    = @product.category.name
                  %br
                  = link_to "#" do
                    -# トップス
                  %br
                  = link_to "#" do
                    -# Tシャツ/カットソー(半袖/袖なし)
              %tr
                %th ブランド
                %td 
              %tr
                %th 商品の状態
                %td 
                  = @product.status
              %tr
                %th 配送料の負担
                %td 
                  = @product.shipping_cost
              %tr
                %th 発送元の地域
                %td 
                  = link_to "#" do
                    = @product.prefecture.name
              %tr
                %th 発送日の目安
                %td 
                  = @product.shipping_days

        .optionalArea
          %ul
            %li{:class => "likeBtn"}
              = icon('fas','star')
              お気に入り 0  
          %ul
            %li{:class => "optionalBtn"}
              = link_to "#" do
                = icon('fas','flag')
                不適切な商品の通報 





      .commentBox
        - if user_signed_in? && current_user.id == @product.user_id
          %ul.productbtn
            %li
              = link_to '編集', "#", method: :get, class: "productbtn--edit"
            %li
              = link_to '削除', product_path(@product), method: :delete, class: "productbtn--destroy"
        - else
          %button.commentBtn 
            = link_to '購入する', edit_buy_path(@product.id), class:"commentBtn"
          .productcheck
            購入内容の確認
            .productcheck__item
              = image_tag src="noimage.png"
              .productcheck__item--detail
                .productcheck__item--detail__name
                  商品名
                .productcheck__item--detail__name
                  テックキャンプ転職コース
                %hr/
              .productcheck__item--detail
                .productcheck__item--detail__name
                  支払い金額
                .productcheck__item--detail__name
                  ¥ 700,000（税込)
                %hr/
              .productcheckbtn
                %button.commentBtn 
                  購入する
          

    %ul.links
      %li<
        = link_to "#" do
          = icon('fas','angle-left')
          前の商品

      %li<
        = link_to "#" do
          後ろの商品
          = icon('fas','angle-right')

    .relatedItems
      = link_to "#" do
        レディースをもっと見る

