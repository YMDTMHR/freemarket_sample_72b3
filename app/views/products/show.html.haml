.wraper
  .main
    .topContent
      .itemBox
        %h2 
          = @product.name
        .itemBox__body
          %ul
            %li<
              = image_tag @product.images[0].image.url
              %ul
                - @product.images.each do |image|
                  %li<
                    = image_tag image.image.url,size: "75x75"

        .itemBox__price
          %span 
            ¥
            = @product.price
          .itemBox__price--detail
            (税込) 送料込み
        .itemDetail
          = @product.description
        .table
          %table
            %tbody
              %tr
                %th 出品者
                %td 
                  = @product.user.nickname
              %tr
                %th カテゴリー
                %td 
                  -if @product.category.parent
                    -if @product.category.parent.parent
                      = link_to "#" do
                        = @product.category.parent.parent.name
                      %br
                      = link_to "#" do
                        = @product.category.parent.name
                      %br
                    - else
                      = link_to "#" do
                        = @product.category.parent.name
                  -if @product.category
                    = link_to "#" do
                      = @product.category.name
              %tr
                %th 商品の状態
                %td 
                  = @product.status
              %tr
                %th 配送料の負担
                %td 
                  = @product.shipping_cost
              %tr
                %th 発送元の地域
                %td 
                  = link_to "#" do
                    = @product.prefecture.name
              %tr
                %th 発送日の目安
                %td 
                  = @product.shipping_days

        .optionalArea
          %ul
            %li{:class => "likeBtn"}
              = icon('fas','star')
              お気に入り 0  
          %ul
            %li{:class => "optionalBtn"}
              = link_to "#" do
                = icon('fas','flag')
                不適切な商品の通報 





      .commentBox
        - if user_signed_in? && current_user.id == @product.user_id
          %ul.productbtn
            %li
              = link_to '編集', edit_product_path(@product), method: :get, class: "productbtn--edit"
            %li
              = link_to '削除', product_path(@product), method: :delete, class: "productbtn--destroy"
        - elsif user_signed_in?
          %button.commentBtn 
            = link_to '購入する', edit_buy_path(@product.id), class:"commentBtn"
        - else
          購入するには会員になる必要があります
          
          

    %ul.links
      %li<
        = link_to "#" do
          = icon('fas','angle-left')
          前の商品

      %li<
        = link_to "#" do
          後ろの商品
          = icon('fas','angle-right')

    .relatedItems
      = link_to "#" do
        レディースをもっと見る

