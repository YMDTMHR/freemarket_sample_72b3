.products
  .products__logo
    .logo
      =link_to image_tag('logo.png', size:"160x40"),root_path
  .products__items
    = form_for @product do |f|
      .items__image
        %ul
        - @product.errors.full_messages.each do |message|
          %li= message
        .image__name 出品画像
        .image__required 必須
        .image__upload 最大４枚までアップロードできます 
        .image__pictures
          = f.fields_for :images, class: "" do |i|
            .img-label
              =i.label :image do
                .image__picture
                = i.file_field :image, multiple: true
                .image__picture__btn 
                  = icon('fas', 'camera')
                .image__picture__sentence
                  画像を登録する
            .img-label
              =i.label :image2 do
                .image__picture
                = i.file_field :image2, class:""
                .image__picture__btn 
                  = icon('fas', 'camera')
                .image__picture__sentence
                  画像を登録する
            .img-label
              =i.label :image3 do
                .image__picture
                = i.file_field :image3, class:""
                .image__picture__btn 
                  = icon('fas', 'camera')
                .image__picture__sentence
                  画像を登録する
            .img-label
              =i.label :image4 do
                .image__picture
                = i.file_field :image4, class:""
                .image__picture__btn 
                  = icon('fas', 'camera')
                .image__picture__sentence
                  画像を登録する
                

                
            -# .image__picture 
            -#   .image__picture__btn 
            -#   = icon('fas', 'camera')
            -#   .image__picture__sentence
            -#     画像を登録する
            -# .image__picture 
            -#   .image__picture__btn 
            -#   = icon('fas', 'camera')
            -#   .image__picture__sentence
            -#     画像を登録する
            -# .image__picture 
            -#   .image__picture__btn 
            -#   = icon('fas', 'camera')
            -#   .image__picture__sentence
            -#     画像を登録する
          -# = form_with(model: [@product, @image], local: true) do |form|
          -#   = f.label "画像をアップロード"
          -#   %br/
          -#   = f.file_field :image

      .items__product
        .product__name 商品名
        .product__required 必須
        = f.text_field :name, placeholder: "40文字まで", class: "product__goods"
        %br/
        %br/
        .product__name 商品の説明
        .product__required 必須
        = f.text_area :description, placeholder: "商品の説明(必須1000文字以内)", class: "product__description"
        %br/
        %br/
        .product__name カテゴリー
        .product__required 必須
        = f.collection_select :category_id, Category.all, :id, :name
        %br/
        %br/

        .product__name 商品の状態
        .product__required 必須
        = f.select :status, [['新品、未使用', 1], ['未使用に近い', 2], ["目立った傷や汚れなし", 3], ["やや傷や汚れあり", 4], ["傷や汚れあり", 5], ["全体的に状態が悪い", 6]], {selected: 1}, {class: "product__status"}
        

      .items__delivery
        .delivery__name 配送料の負担
        .delivery__required 必須
        = f.select :shipping_cost, [['送料込み(出品者負担)', 1], ['着払い(購入者負担)', 2]], {selected: 1}, {class: "delivery__cost"}
        %br/
        %br/
        .delivery__name 発送元の地域
        .delivery__required 必須
        = f.collection_select :prefecture_id, Prefecture.all, :id, :name
        %br/
        %br/
        .delivery__name 発送までの日数
        .delivery__required 必須
        = f.select :shipping_days, [['1~2日で発送', 1], ['2~3日で発送', 2], ["4~7日で発送", 3]], {selected: 1}, {class: "delivery__days"}

      .items__value
        .value__name 販売価格
        .value__required 必須
        = f.text_field :price, placeholder: "入力してください", class: "value__prize"
        .value__commission 販売手数料（10%）
        .value__profit 販売利益
        = f.submit root_path, value:"出品する",  class: "value__judgment"
      
   
