.destinations
  .destinations__logo
    =link_to image_tag('logo.png', size:"180x60"),root_path, class: "logo"

  .destinations__input
    = form_for @destination do |f|
  
      .input__shippig
        .shippig__address
          発送元・お届け先住所入力
        .shippig__name
          お名前
        .shippig__required 
          必須
        %br/
        .shippig__nameForm
          = f.text_field :family_name, placeholder: "例）山田", class: "shippig__nameFormInput"
          = f.text_field :first_name, placeholder: "例）花子", class: "shippig__nameFormInput"
        %br/
        .shippig__name 
          お名前カナ
        .shippig__required 
          必須
        %br/
        .shippig__nameForm
          = f.text_field :family_name_kana, placeholder: "例）ヤマダ", class: "shippig__nameFormInput"
          = f.text_field :first_name_kana, placeholder: "例）ハナコ", class: "shippig__nameFormInput"
          
        %br/
        .shippig__name 
          郵便番号
        .shippig__required 
          必須
        %br/
        = f.text_field :post_code, placeholder: "例）123-4567", class: "shippig__form"
        
          
        %br/ 
        .shippig__name 
          都道府県
        .shippig__required 
          必須
        %br/
        = f.collection_select :prefecture_id, Prefecture.all, :id, :name
        
        %br/ 
        .shippig__name 
          市区町村
        .shippig__required 
          必須
        %br/
        = f.text_field :city, placeholder: "例）横浜市緑区", class: "shippig__form"
        
          
        %br/ 
        .shippig__name 
          番地
        .shippig__required 
          必須
        %br/
        = f.text_field :address, placeholder: "青山1-1-1", class: "shippig__form"
        
        %br/ 
        .shippig__name 
          建物例
        .shippig__any
          任意
        %br/
        = f.text_field :building_name, placeholder: "例）柳ビル103", class: "shippig__form"
        
    
        %br/ 
        .shippig__name 
          電話
        .shippig__any 
          任意
        %br/
        = f.text_field :phone_number, placeholder: "例）090-1234-5678 ", class: "shippig__form"
        %br/

        = f.submit value:"登録する" ,class: "shippig__judgment"