.destinations
  .destinations__logo
    .logo
      =link_to image_tag('logo.png', size:"160x40"),root_path

  .destinations__input
    = form_for @destination do |f|
  
      .input__shippig
        .shippig__address
          発送元・お届け先住所入力
        .shippig__name
          お名前
        .shippig__required 
          必須
        -# .shippig__family
        = f.text_field :family_name, placeholder: "例）山田", class: "shippig__family"
        = f.text_field :first_name, placeholder: "例）花子", class: "shippig__first"
        
        %br/
        .shippig__name 
          お名前カナ
        .shippig__required 
          必須
        
        = f.text_field :family_name_kana, placeholder: "例）ヤマダ", class: "shippig__family"
        = f.text_field :first_name_kana, placeholder: "例）ハナコ", class: "shippig__first"
        
          
        %br/
        .shippig__name 
          郵便番号
        .shippig__required 
          必須
        = f.text_field :post_code, placeholder: "例）123-4567", class: "shippig__family"
        
          
        %br/ 
        .shippig__name 
          都道府県
        .shippig__required 
          必須
        = f.collection_select :prefecture, Prefecture.all, :id, :name, class: "shippig__family"
        
        %br/ 
        .shippig__name 
          市区町村
        .shippig__required 
          必須
        
        
        = f.text_field :city, placeholder: "例）横浜市緑区", class: "shippig__family"
        
          
        %br/ 
        .shippig__name 
          番地
        .shippig__required 
          必須
        = f.text_field :address, placeholder: "青山1-1-1", class: "shippig__family"
        
        %br/ 
        .shippig__name 
          建物例
        .shippig__any
          任意
        = f.text_field :building_name, placeholder: "例）柳ビル103", class: "shippig__family"
        
    
        %br/ 
        .shippig__name 
          電話
        .shippig__any 
          任意
        = f.text_field :phone_number, placeholder: "例）090-1234-5678 ", class: "shippig__family"
        %br/

        = f.submit value:"登録する" ,class: "shippig__judgment"

        %br/
        -# .shippig__judgment
        -#   登録する
        -# %br/ 

      