.wraper
  .side-bar
    %ul
      %li
        = link_to "マイページ", user_path(current_user), class: "Lists__right--btn"
      %li
        = link_to "クレジット情報", signup_index_path
      %li
        = link_to 'お届け先住所変更', edit_destination_path, class: "mypage__title--edit"
      %li
        = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "Lists__right--btn"
      
  .mypage
    .mypage__title
      .mypage__title--text
        お届け先
      
    .userdatas
      .userdata
        .userdata__key
          お名前
        .userdata__value
          = @destination.family_name 
          = @destination.first_name 
      .userdata
        .userdata__key
          お名前カナ
        .userdata__value
          = @destination.family_name_kana
          = @destination.first_name_kana
      .userdata
        .userdata__key
          郵便番号
        .userdata__value
          = @destination.post_code 
      .userdata
        .userdata__key
          都道府県
        .userdata__value
          = @destination.prefecture.name
      .userdata
        .userdata__key
          市区町村
        .userdata__value
          = @destination.city 
      .userdata
        .userdata__key
          番地
        .userdata__value
          = @destination.address  
      .userdata
        .userdata__key
          建物
        .userdata__value
          = @destination.building_name

      .userdata
        .userdata__key
          電話
        .userdata__value
          = @destination.phone_number